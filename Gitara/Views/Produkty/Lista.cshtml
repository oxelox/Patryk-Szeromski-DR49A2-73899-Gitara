@model IEnumerable<Gitara.DB.Towar>

@if (Model.Any())
{
    foreach (var m in Model)
    {
        <div class="panel panel-default panel-danger">
            <div class="panel-body">
                <div class="col-md-7 col-xs-6">
                    <h3>
                        @m.Producent <small>@m.Model</small>
                    </h3>
                </div>
                
                <div class="col-md-2 col-xs-6">
                    <h5>Cena</h5>
                    <h4>@m.Cena.ToString("c")</h4>
                </div>
                @if (User.Identity.IsAuthenticated)
    {
            <div class="col-md-3 col-xs-12">
                <a href="@Url.Action("Zamow", "Produkty", new {id = m.TowarId})" class="btn btn-lg btn-success pull-right"><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> Kup</a>
            </div>
}
else
{
            <div class="col-md-3 col-xs-12">
                <a href="@Url.Action("Register", "Account")" class="small text-center pull-right"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Przejdź do rejestracji, aby dokonać zakupu</a>
            </div>
}
                <div class="col-md-12">
                    <h4>Opis</h4>
                    <h5>@m.Opis</h5>
                </div>
            </div>
        </div>
    }
}
else
{
    <h3 class="text-center">Brak wyników spełniających podane kryteria</h3>
}